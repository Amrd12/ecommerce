<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-5">
  <div class="row">
    <!-- Profile & Credentials -->
    <div class="col-md-6 mb-4">
      <h3>Profile Info</h3>
      <form id="checkout-form" method="POST" action="/make-order">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input type="text" class="form-control" value="<%= user.name %>" placeholder="Enter full name" readonly>
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" value="" placeholder="Enter email" readonly>
        </div>
        <div class="mb-3">
          <label class="form-label">Address</label>
          <input type="text" class="form-control" name="address" placeholder="Shipping address" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Payment Method</label>
          <select class="form-select" name="paymentMethod" required>
            <option value="Credit Card">Credit Card</option>
            <option value="PayPal">PayPal</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Place Order</button>
      </form>
    </div>

    <!-- Cart Summary -->
    <div class="col-md-6">
      <h3>Your Cart</h3>
      <ul class="list-group" id="checkout-cart"></ul>
    </div>
  </div>
</div>

<script>
  // Populate the cart summary dynamically
  const items = <%- JSON.stringify(cart) %>;
  const cartList = document.getElementById('checkout-cart');

  let total = 0;
  items.forEach(item => {
    const li = document.createElement('li');
    li.className = 'list-group-item d-flex justify-content-between';
    li.innerHTML = `${item.name} <span>$${item.price.toFixed(2)}</span>`;
    cartList.appendChild(li);
    total += item.price;
  });

  const totalEl = document.createElement('li');
  totalEl.className = 'list-group-item d-flex justify-content-between fw-bold';
  totalEl.innerHTML = `Total <span>$${total.toFixed(2)}</span>`;
  cartList.appendChild(totalEl);
</script>

</body>
</html>
